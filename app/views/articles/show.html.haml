%h1 Article Update
=@article.id
%p
	%strong Title: 
	=@article.title
 
%p
	%strong Text: 
	=@article.text

%h2 Comments
-@article.comments.each do |comment| 
	%p 
		%strong Commenter: 
		= comment.commenter
	%p
		%strong Comment:
		= comment.body

%h2 Add a comment:
= form_for([@article, @article.comments.build]) do |f|
	%p
		= f.label :Commenter
		%br/
		= f.text_field :commenter
	%p
		= f.label :body
		%br/
		= f.text_area :body
	%p
		= f.submit 	

%p
= link_to 'Edit', edit_article_path(@article)
%p
= link_to 'Add another article', new_article_path
%p
= link_to 'View all articles', articles_path